<div class="mx-auto pt-3 " style="width: 350px">
<h3 class="mt-1 mb-3">パスワード忘れましたか?</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'user' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email,"メールアドレス ",class: "form-label"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-user" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-user" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

