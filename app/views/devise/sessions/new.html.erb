<div class="mx-auto pt-5 mt-5" style="width: 350px;">
  <h3 class="mt-1 mb-3">ログイン</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email,"メールアドレス" , class: "form-label"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password,"パスワード",  class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me,"ログインを記憶", class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン",class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
